  <div class="row">
    <div class="col-md-12">

      <%= form_for @contact, :html => { :class => "form-horizontal"} do |f| %>
      <fieldset>
        <legend>Message Form</legend>
        <% if @contact.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

            <ul>
            <% @contact.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
            <%= f.label :name, :class => "control-label" %>
            <div class="controls">
              <%= f.text_field :name, :class => "form-control input-xlarge" %>
            </div>
        </div>
      </div>
    </div>



    <div class="row">
      <div class="col-md-12">
     <div class="form-group">
            <%= f.label :email, :class => "control-label" %>
            <div class="controls">
              <%= f.text_field :email, :class => "form-control input-xlarge" %>
            </div>
        </div>
      </div>
    </div>        

   
    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <%= f.label :phone, :class => "control-label" %>
          <div class="controls">
            <%= f.text_field :phone, :class => "form-control input-xlarge" %>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <%= f.label :contact_time, :class => "control-label" %>
          <div class="controls">
            <%= f.text_field :contact_time, :class => "form-control input-xlarge" %>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <%= f.label :message, :class => "control-label" %>
          <div class="controls">
            <%= f.text_area :message, :class => "form-control input-xlarge" %>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
                <div class="actions">
          <%= f.submit :value=>"Send Message" ,:class => "btn btn-primary" %>
        </div>
      </div>
    </div>

      </fieldset>
      <% end %>
    </div>
  </div>