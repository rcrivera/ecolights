<div class="container content">
	<div class="row">
    <div class="col-md-12">
      <h2 class="centralize page-heading"><%= "Sign in" %></h2>
    </div>
  </div>

  <fieldset>
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		<div class="row">
	      <div class="col-md-12">
	        <div class="form-group">
	          <%= f.label :email, :class => "control-label" %>
	          <div class="controls">
	            <%= f.email_field :email, :class => "form-control input-xlarge" %>
	          </div>
	        </div>
	      </div>
	    </div>


		  <div class="row">
	      <div class="col-md-12">
	        <div class="form-group">
	          <%= f.label :password, :class => "control-label" %>
	          <div class="controls">
	            <%= f.password_field :password, :class => "form-control input-xlarge" %>
	          </div>
	        </div>
	      </div>
	    </div>

		  <% if devise_mapping.rememberable? -%>
		  	<div class="row">
	      	<div class="col-md-12">
				    <div class="form-group">
			        <%= f.label :remember_me, :class => 'control-label' %>
			        <%= f.check_box :remember_me %>
			      </div>
			    </div>
			  </div>
		  <% end -%>

		  <div class="row">
	    	<div class="col-md-12">
					<%= f.submit "Sign in",:class=>"btn btn-primary" %>
					<% end %>
				</div>
			</div>

		<%= render "devise/shared/links" %>
	</fieldset>
</div>

