<div class="container content">
  <div class="row">
    <div class="col-md-12">
      <ol class="breadcrumb">
        <li><%= link_to "Admin Content Manager", admin_root_path %></li>
        <li class="active"> <%= @header %> </li>
      </ol>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <h2 class="centralize page-heading"><%= @header %></h2>
      <p><%= link_to '+ New Technology', new_admin_technology_path, :class=>"btn btn-success" %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Picture</th>
              <th>Name</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody class="index-admin">
            <% @technologies.each do |technology| %>
              <tr>
                <td><%= image_tag technology.picture.url(:thumb) %></td>
                <td><%= link_to technology.title, admin_technology_path(technology) %></td>
                <td>
                  <%= link_to 'Edit', edit_admin_technology_path(technology) %> | 
                  <%= link_to 'Destroy', admin_technology_path(technology), method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
