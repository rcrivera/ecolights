<div class="container content">
  <div class="row">
    <div class="col-md-12">
      <ol class="breadcrumb">
        <li><%= link_to "Admin Content Manager", admin_root_path %></li>
        <li class="active"> <%= @header %> </li>
      </ol>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <h2 class="centralize page-heading"><%= @header %></h2>
      <p><%= link_to '+ New Approval', new_admin_approval_path, :class=>"btn btn-success" %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
           <th>Picture</th>
           <th>Name</th>
           <th>Actions</th>
            </tr>
          </thead>
          <tbody class="index-admin">
            <% @approvals.each do |approval| %>
              <tr>
                <td><%= image_tag approval.picture.url(:thumb) %></td>
                <td><%= link_to approval.title, admin_approval_path(approval) %></td>
                <td>
                  <%= link_to 'Edit', edit_admin_approval_path(approval) %> |
                  <%= link_to 'Remove', admin_approval_path(approval), method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
