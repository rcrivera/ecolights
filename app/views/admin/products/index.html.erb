<div class="container content">
  <div class="row">
    <div class="col-md-12">
      <ol class="breadcrumb">
        <li><%= link_to "Admin Content Manager", admin_root_path %></li>
        <li class="active"> <%= @header %> </li>
      </ol>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <h2 class="centralize page-heading"><%= @header %></h2>
      <p><%= link_to '+ New Product', new_admin_product_path, :class=>"btn btn-success" %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Picture</th>
              <th>Name</th>
              <th>SKU</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody class="index-admin">
            <% @products.each do |product| %>
              <tr>
                <td><%= image_tag product.picture.url(:thumb) %></td>
                <td><%= link_to product.title, admin_product_path(product) %></td>
                <td><%= product.sku_code%></td>
                <td>
                  <%= link_to 'Edit', edit_admin_product_path(product) %> |
                  <%= link_to 'Remove', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

